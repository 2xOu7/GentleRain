# $1 = number of partitions per data center
# $2 = number of total data centers


# Start up clients
for (( i = 1; i <= $2; i++ ))      ### Outer for loop ###
do
  ttab ./client $1 $i
done

# Start up servers

for (( i = 1; i <= $2; i++ ))      ### For each data center
do

    for (( j = 1 ; j <= $1; j++ )) ### For each partition
    do
          ttab ./server $j $i $2
    done

done

